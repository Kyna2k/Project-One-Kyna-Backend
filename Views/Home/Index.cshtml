@{
    ViewData["Title"] = "Home Page";
}
<html>
    <head >
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/dangky.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Kyna Shop</title>
    <style>
        a{
            text-decoration: none;

        }
    </style>
    </head>
    <body>
    <div class="text-center">
        
        <h1 class="display-4">Welcome to KynaShop</h1>
        <div id="menu" class="card">
            <ul class="list-group list-group-flush">
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý khách hàng","index","Khachhangs")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý Sản Phẩm","index","sanphams")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý hình ảnh sản phẩm","index","hinhs")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý Nhân viên viên bán hàng","index","Nhanvienbanhangs")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý Hóa đơn","index","hoadons")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý chi tiết hóa đơn","index","chitiethoadons")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý bình luận sản phẩm","index","comments")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý nhãn hàng","index","nhasanxuats")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        @Html.ActionLink("Quản lý khuyến mãi","index","khuyenmais")
                    </div>
                </li>
                <li class="menu-dropdown list-group-item">
                    <div class="menu-dropdown-content">
                        <a href="~/Templates/MoTaSanPham.html">Phần mềm thêm mô tả sản phẩm</a>
                    </div>
                </li>
            </ul>
        </div>
        <div id="container">
            <section id="dangky">
                <div class="container-fluid ps-md-0 frm_dangnhap">
                    <div class="row g-0">
                        <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
                        <div class="col-md-8 col-lg-6">
                            <div class="login d-flex align-items-center py-5">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-9 col-lg-8 mx-auto">
                                            <h3 class="login-heading mb-4">Chào mừng bạn</h3>

                                            <!-- Sign In Form -->
                                            <form>
                                                <div class="form-floating mb-3">
                                                    <input type="email" class="form-control email" id="floatingInput" placeholder="name@example.com">
                                                    <label for="floatingInput">Địa chỉ email</label>
                                                </div>
                                                <div class="form-floating mb-3">
                                                    <input type="password" class="form-control matkhau" id="floatingPassword" placeholder="Password">
                                                    <label for="floatingPassword">Mật khẩu</label>
                                                </div>

                                                <div class="form-check mb-3">
                                                    <input class="form-check-input check" type="checkbox" value="" id="rememberPasswordCheck">
                                                    <label class="form-check-label" for="rememberPasswordCheck">
                                                        Ghi nhớ mật khẩu
                                                    </label>
                                                </div>

                                                <div class="d-grid">
                                                    <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2 btn_dangnhap" type="button">Đăng nhập</button>
                                                    <div class="text-center">
                                                        <a class="small" href="#">Quên mật khẩu?</a>
                                                    </div>

                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
    </div>
    </body>
    <script src="~/js/site.js"></script>
</html>

